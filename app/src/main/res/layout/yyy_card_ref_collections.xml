<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    card_view:cardCornerRadius="0dp"
    android:layout_margin="1dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <com.github.florent37.shapeofview.shapes.ArcView
            android:id="@+id/crdRefArcView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            card_view:shape_arc_height="15dp"
            card_view:shape_arc_position="bottom"
            app:shape_circle_borderColor="@color/colorAccent"
            app:shape_circle_borderWidth="2dp"
            >

            <ImageView
                android:id="@+id/crdRefImgCollectionImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="centerCrop"
                android:background="@color/colorPrimaryDark"

                android:src="@drawable/temple"

                />
        </com.github.florent37.shapeofview.shapes.ArcView>

        <TextView
            android:id="@+id/crdRefTxtCollectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Collection Title"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/crdRefTxtCollectionDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No of items: 10"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"

            />

        <TextView
            android:id="@+id/crdRefTxtCollectionNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="TextView" />

        <TextView
            android:id="@+id/crdRefTxtCollectionUID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="TextView" />

        <TextView
            android:id="@+id/crdRefTxtCollectionImgLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="TextView" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>