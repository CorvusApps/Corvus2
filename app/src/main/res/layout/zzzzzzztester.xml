<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".RefCollectionsDir"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lighttext"
        android:background="@color/colorAccent"
        android:text="Corvus Reference Collections"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/grdLoutCollMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="3">

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:backgroundTint="@color/colorPrimary"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/crdTwelveCaesars"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"

                    android:backgroundTint="@color/colorPrimaryDark"
                    app:shape_circle_borderColor="@color/colorPrimary"
                    app:shape_circle_borderWidth="2dp">

                    <ImageView
                        android:id="@+id/crdImgTwelveCaesars"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:elevation="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sestvitellius"

                        />
                </com.github.florent37.shapeofview.shapes.CircleView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/txtTwelveCaesars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="The Twelve Caesars"
                    android:textAllCaps="false"
                    android:textColor="@color/lighttext"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/_10sdp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:backgroundTint="@color/colorPrimary"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/crdGoldenAge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    app:shape_arc_height="@dimen/_15sdp"
                    app:shape_arc_position="bottom"
                    app:shape_circle_borderColor="@color/colorPrimary"
                    app:shape_circle_borderWidth="2dp">

                    <ImageView
                        android:id="@+id/crdImgGoldenAge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:elevation="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sestnerva"

                        />
                </com.github.florent37.shapeofview.shapes.CircleView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/txtGoldenAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Nerva to Cl. Albinus"
                    android:textAllCaps="false"
                    android:textColor="@color/lighttext"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/_10sdp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:backgroundTint="@color/colorPrimary"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/crdSeverans"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    app:shape_arc_height="@dimen/_15sdp"
                    app:shape_arc_position="bottom"
                    app:shape_circle_borderColor="@color/colorPrimary"
                    app:shape_circle_borderWidth="2dp">

                    <ImageView
                        android:id="@+id/crdImgSeverans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:elevation="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sestcaracalla"

                        />
                </com.github.florent37.shapeofview.shapes.CircleView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/txtSeverans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="The Severans"
                    android:textAllCaps="false"
                    android:textColor="@color/lighttext"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/_10sdp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:backgroundTint="@color/colorPrimary"
            app:cardElevation="0dp">



            <com.github.florent37.shapeofview.shapes.CircleView
                android:id="@+id/crdCrisis"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:backgroundTint="@color/colorPrimaryDark"

                app:shape_circle_borderColor="@color/colorPrimary"
                app:shape_circle_borderWidth="2dp">

                <ImageView
                    android:id="@+id/crdImgCrisis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:backgroundTint="@color/colorPrimaryDark"
                    android:elevation="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sestphilip"

                    />
            </com.github.florent37.shapeofview.shapes.CircleView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/txtCrisis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_130sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="3rd Century Crisis"
                android:textAllCaps="false"
                android:textColor="@color/lighttext"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_10sdp" />




        </androidx.cardview.widget.CardView>



    </GridLayout>



    <com.github.florent37.shapeofview.shapes.CircleView
        android:id="@+id/crdSeverans2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:backgroundTint="@color/colorPrimaryDark"

        app:shape_circle_borderColor="@color/colorPrimary"
        app:shape_circle_borderWidth="2dp">

        <ImageView
            android:id="@+id/crdImgSeverans2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sestcaracalla"

            />
    </com.github.florent37.shapeofview.shapes.CircleView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/txtSeverans2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="@dimen/_1sdp"
        android:backgroundTint="@color/colorAccent"
        android:text="The Severans"
        android:textAllCaps="false"
        android:textColor="@color/lighttext"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_10sdp" />


</LinearLayout>