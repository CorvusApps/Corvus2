<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:id="@+id/dLayoutSetColImg"


    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"

        android:background="@color/colorAccent"

        android:elevation="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"

            android:paddingBottom="8dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                app:srcCompat="@drawable/image" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:elevation="0dp"
                android:text="Set Image"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txtMsgsci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="#FFFFFF"

            android:text="Do you want to set an image for your collection description as is?"
            android:textSize="18sp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:elevation="0dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSetImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineProvider="none"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Image"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btnSaveAsIs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineProvider="none"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="Save"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineProvider="none"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="Cancel"
                android:textSize="12sp"
                android:textStyle="normal"
                app:iconPadding="0dp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/arcView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_circle_borderColor="@color/colorAccent"
            app:shape_circle_borderWidth="2dp"


            >

            <ImageView
                android:id="@+id/imgCollectionImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/greycrow" />
        </com.github.florent37.shapeofview.shapes.CircleView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>